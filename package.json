{
  "name": "react-source-render",
  "version": "3.0.0-3",
  "repository": "https://github.com/layershifter/react-source-render.git",
  "author": "Alexander Fedyashov <a@fedyashov.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "deepmerge": "^2.2.1",
    "prop-types": "^15.6.2",
    "react-fast-compare": "^2.0.4",
    "react-is": "^16.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/standalone": "^7.4.4",
    "@babel/types": "^7.4.4",
    "@pika/pack": "^0.3.7",
    "@pika/plugin-build-node": "^0.4.0",
    "@pika/plugin-build-types": "^0.4.0",
    "@pika/plugin-build-web": "^0.4.0",
    "@pika/plugin-standard-pkg": "^0.4.0",
    "@types/prop-types": "^15.7.1",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/react-is": "^16.7.1",
    "@types/webpack-env": "^1.13.9",
    "@zeit/next-typescript": "^1.1.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "brace": "^0.11.1",
    "copy-to-clipboard": "^3.2.0",
    "cross-env": "^5.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "exenv": "^1.2.2",
    "gh-pages": "^2.0.1",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.6",
    "next": "^8.1.0",
    "prettier": "^1.17.1",
    "react": "^16.8.6",
    "react-ace": "^6.5.0",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "rimraf": "^2.6.3",
    "semantic-ui-react": "^0.87.1",
    "serve": "^11.0.0",
    "typescript": "^3.4.5"
  },
  "peerDependencies": {
    "@babel/standalone": "^7.0.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "scripts": {
    "build:docs": "cross-env NODE_ENV=production yarn build:docs:static",
    "prebuild:docs:static": "rimraf out",
    "build:docs:static": "next build && next export",
    "build:lib": "pack build",
    "deploy": "gh-pages -d out",
    "lint": "eslint .",
    "release": "pack publish",
    "stage": "yarn build:docs:static && serve out",
    "start": "next",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "yarn test --watch",
    "test:watchAll": "yarn test --watchAll"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "*.spec.ts"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types"
      ]
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "testEnvironment": "node",
    "testRegex": "\\.spec\\.js$",
    "testURL": "http://localhost/",
    "setupFiles": [
      "<rootDir>/setupTests.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    ".babelrc": [
      "prettier --write",
      "git add"
    ],
    ".eslintrc": [
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
